<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FF"
    tools:context=".figure_10">

    <!--header-->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/barra_header"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="78dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver"
            android:src="@drawable/ic_left" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="Horarios Asignados"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Filtro: Semana/Mes -->
    <LinearLayout
        android:id="@+id/filtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtrar por:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="8dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_semana"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Semana"
                android:background="@drawable/btn_rounded_blue"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_mes"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Mes"
                android:textSize="16sp"
                android:textColor="#666666"
                app:backgroundTint="@null"
                android:background="@drawable/btn_rounded_gray" />
        </LinearLayout>

    </LinearLayout>

    <!--Body contenedor-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/btn_cambio_turno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filtro">

        <!-- Título de la lista -->
        <TextView
            android:id="@+id/tv_lista_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Lista de horarios"
            android:textColor="#666666"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tarjetas (2 filas, 2 columnas) -->

        <!-- CardView 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:cardElevation="4dp"
            android:radius="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_lista_horario"
            app:layout_constraintEnd_toStartOf="@id/card_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/texto_dia_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunes 25/08/2025"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_hora_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00AM - 06:00PM"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_estado_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_rounded_blue"
                    android:text="Asignado"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:cardElevation="4dp"
            android:radius="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:layout_constraintStart_toEndOf="@id/card_1"
            app:layout_constraintTop_toBottomOf="@id/tv_lista_horario"
            app:layout_constraintEnd_toStartOf="@id/card_3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/texto_dia_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Martes 26/08/2025"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_hora_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00AM - 06:00PM"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_estado_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_rounded_blue"
                    android:text="Asignado"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:cardElevation="4dp"
            android:radius="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_1"
            app:layout_constraintEnd_toStartOf="@id/card_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/texto_dia_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miércoles 27/08/2025"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_hora_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00AM - 06:00PM"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_estado_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_rounded_blue"
                    android:text="Asignado"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:cardElevation="4dp"
            android:radius="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:layout_constraintStart_toEndOf="@id/card_3"
            app:layout_constraintTop_toBottomOf="@id/card_2"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/texto_dia_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jueves 28/08/2025"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_hora_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00AM - 06:00PM"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_estado_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_rounded_blue"
                    android:text="Asignado"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Botón solicitar cambio turno-->
    <Button
        android:id="@+id/btn_cambio_turno"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:backgroundTint="#006699"
        android:text="Solicitar cambio de turno"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
