<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Fondo con gradiente sutil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background_celeste"
            android:alpha="0.1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingTop="40dp"
        android:paddingEnd="24dp"
        android:paddingBottom="40dp"
        tools:context=".pantalla_login_inicio_sesion">

        <!-- Logo con contenedor circular mejorado -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_logo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#3B82F6"
            app:cardCornerRadius="65dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:contentDescription="Logo de la aplicación"
                android:src="@drawable/logo_inicio" />

        </androidx.cardview.widget.CardView>

        <!-- Título de bienvenida mejorado -->
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-black"
            android:text="Iniciar Sesión"
            android:textColor="#1F2937"
            android:textSize="32sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_logo" />

        <!-- Subtítulo mejorado -->
        <TextView
            android:id="@+id/tv_subtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Accede a tu cuenta de PUNTUAL IA"
            android:textColor="#6B7280"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo" />

        <!-- Línea decorativa superior -->
        <View
            android:id="@+id/line_top"
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/decorative_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitulo" />

        <!-- Contenedor del formulario con elevación -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_form_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="#FAFBFC"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_top">

        <!-- Formulario de login integrado -->
        <LinearLayout
            android:id="@+id/ll_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Título del campo documento -->
            <TextView
                android:id="@+id/tv_label_documento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:alpha="0.9"
                android:fontFamily="sans-serif-medium"
                android:text="Número de documento"
                android:textColor="#2C3E50"
                android:textSize="14sp" />

            <!-- Campo de documento -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_documento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#F8F9FA"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="#4A90E2"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="#4A90E2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_documento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="number"
                    android:textColor="#2C3E50"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Título del campo contraseña -->
            <TextView
                android:id="@+id/tv_label_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.9"
                android:fontFamily="sans-serif-medium"
                android:text="Contraseña"
                android:textColor="#2C3E50"
                android:textSize="14sp" />

            <!-- Campo de contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#F8F9FA"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="#4A90E2"
                app:endIconMode="password_toggle"
                app:endIconTint="#4A90E2"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="#4A90E2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="numberPassword"
                    android:textColor="#2C3E50"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Texto de validez -->
            <TextView
                android:id="@+id/tv_validez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0.9"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="✓ Válido por 30/31 días"
                android:textColor="#27AE60"
                android:textSize="14sp" />

            <!-- Link para olvidé mi contraseña -->
            <TextView
                android:id="@+id/tv_olvide_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:padding="8dp"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="#4A90E2"
                android:textSize="14sp" />

            <!-- Botón de iniciar sesión -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#FF9500"
                app:cardCornerRadius="25dp"
                app:cardElevation="12dp">

                <TextView
                    android:id="@+id/btn_iniciar_sesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:letterSpacing="0.03"
                    android:padding="18dp"
                    android:text="🔐 INICIAR SESIÓN"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Link para olvidé mi contraseña -->

        <!-- Elementos decorativos -->
        <View
            android:id="@+id/decoration_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:alpha="0.2"
            android:background="@drawable/icon_estrella"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/decoration_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="150dp"
            android:alpha="0.3"
            android:background="@drawable/decorative_circle_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Línea decorativa inferior -->
        <View
            android:id="@+id/line_bottom"
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/decorative_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_form_container" />

        <!-- Elementos decorativos adicionales -->
        <View
            android:id="@+id/decoration_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="180dp"
            android:alpha="0.4"
            android:background="@drawable/decorative_circle_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/decoration_4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="350dp"
            android:alpha="0.5"
            android:background="@drawable/icon_estrella2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/decoration_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="100dp"
            android:alpha="0.3"
            android:background="@drawable/decorative_circle_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</ScrollView>