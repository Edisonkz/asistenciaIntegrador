        <!-- Contenedor del formulario con elevación -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_form_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo">

        <!-- Formulario de login integrado -->
        <LinearLayout
            android:id="@+id/ll_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Título del campo documento -->
            <TextView
                android:id="@+id/tv_label_documento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:alpha="0.9"
                android:fontFamily="sans-serif-medium"
                android:text="Número de documento"
                android:textColor="#08243C"
                android:textSize="14sp" />

            <!-- Campo de documento -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_documento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#F8F9FA"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusBottomEnd="0dp"
                app:boxCornerRadiusBottomStart="0dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="#08243C"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="#0369A1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_documento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="number"
                    android:textColor="#08243C"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Título del campo contraseña -->
            <TextView
                android:id="@+id/tv_label_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.9"
                android:fontFamily="sans-serif-medium"
                android:text="Contraseña"
                android:textColor="#2C3E50"
                android:textSize="14sp" />

            <!-- Campo de contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#F8F9FA"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusBottomEnd="0dp"
                app:boxCornerRadiusBottomStart="0dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="#08243C"
                app:endIconMode="password_toggle"
                app:endIconTint="#0369A1"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="#0369A1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="numberPassword"
                    android:textColor="#08243C"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Texto de validez -->
            <TextView
                android:id="@+id/tv_validez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0.9"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="✓ Válido por 30/31 días"
                android:textColor="#27AE60"
                android:textSize="14sp" />

            <!-- Nuevo: Switch para modo de prueba (autenticación local) -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_mode_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Modo prueba (autenticación local) "
                android:textColor="#08243C"
                android:checked="false" />



            <!-- Botón de iniciar sesión -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#FF9500"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/btn_iniciar_sesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0369A1"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:letterSpacing="0.03"
                    android:padding="18dp"
                    android:text="🔐 INICIAR SESIÓN"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <!-- Link para olvidé mi contraseña -->
            <TextView
                android:id="@+id/tv_olvide_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:padding="8dp"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="#0369A1"
                android:textSize="16sp" />

        </LinearLayout>

        </androidx.cardview.widget.CardView>

