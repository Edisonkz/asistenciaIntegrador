<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo"
    tools:context=".pantalla_administrador_informes_de_asistencia">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:elevation="1dp"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_regresar"
            android:contentDescription="Regresar"/>

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Gestionar Reportes"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Barra de búsqueda -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/barra_busqueda"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <EditText
            android:id="@+id/et_busqueda"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Buscar por nombre de empleado"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColor="#636363"
            android:paddingHorizontal="16dp"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/icon_lupa"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Buscar"
            android:padding="12dp"
            android:src="@drawable/ic_search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/datos_del_empleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/bg_container"
        android:elevation="3dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/search_container">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Andres Gutierrez Alvarado"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="R01010104@puntualia.com"
                android:textColor="#5B5B5B"
                android:textSize="12sp"
                android:background="@drawable/contenedor_background_plomo"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

            <TextView
                android:id="@+id/codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="00145744"
                android:textColor="#5B5B5B"
                android:textSize="12sp"
                android:background="@drawable/contenedor_background_plomo"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

            <TextView
                android:id="@+id/cargo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Técnico TI"
                android:textColor="#5B5B5B"
                android:textSize="12sp"
                android:background="@drawable/contenedor_background_plomo"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/estado_de_asistencia"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:padding="16dp"
        android:background="@drawable/bg_container"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/datos_del_empleado">

        <!-- Encabezado de días -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView android:text="L" style="@style/DiaHeader"/>
            <TextView android:text="M" style="@style/DiaHeader"/>
            <TextView android:text="M" style="@style/DiaHeader"/>
            <TextView android:text="J" style="@style/DiaHeader"/>
            <TextView android:text="V" style="@style/DiaHeader"/>
            <TextView android:text="S" style="@style/DiaHeader"/>
            <TextView android:text="D" style="@style/DiaHeader"/>
        </LinearLayout>

        <!-- Celdas -->
        <GridLayout
            android:id="@+id/grid_asistencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:alignmentMode="alignMargins"
            android:rowCount="5"
            android:layout_marginTop="8dp"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="false" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/fecha_de_reporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/bg_container"
        android:elevation="3dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/estado_de_asistencia">

        <RadioGroup
            android:id="@+id/rgFechas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbMesAnterior"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:buttonTint="@color/blue_check"
                android:text="Mes pasado"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/rbEsteMes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:buttonTint="@color/blue_check"
                android:text="Este mes"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/rbEsteAño"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:buttonTint="@color/blue_check"
                android:text="Este año" />
        </RadioGroup>

    </LinearLayout>

    <!-- Botón -->
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exportar Reporte"
        android:textAllCaps="false"
        android:backgroundTint="@color/azul_boton"
        android:textColor="@android:color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/fecha_de_reporte"/>

</androidx.constraintlayout.widget.ConstraintLayout>