<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo">

    <!-- Header con botón de regreso -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:elevation="1dp"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_regresar"
            android:contentDescription="Regresar"/>

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Agregar Colaborador"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- ScrollView para el contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contenedor principal del formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/bg_container"
            android:elevation="3dp"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Campo: Nombre del colaborador -->
            <TextView
                android:id="@+id/tvNombreColab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="Nombres"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNombreColab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="JUAN CARLOS"
                android:textSize="14sp"
                android:padding="12dp" />

            <!-- Campo: Apellidos del colaborador -->
            <TextView
                android:id="@+id/tvApellidosColab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="Apellidos"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etApellidosColab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="PEREZ TORREBLANCA"
                android:textSize="14sp"
                android:padding="12dp" />

            <!-- Campo: Doc. del colaborador -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_container"
                android:padding="8dp">

                <!-- Tipo Doc -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTipoDoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo Doc."
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinnerDoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input"
                        android:padding="12dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <!-- Número Doc -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvNumDoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N° de Documento"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etNumDoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input"
                        android:hint="70707070"
                        android:textSize="14sp"
                        android:padding="14dp"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>



            <!-- Campo: Correo del colaborador -->
            <TextView
                android:id="@+id/tvCorreoColab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="Correo Electrónico"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etCorreoColab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="mail@miempresa.com"
                android:textSize="14sp"
                android:padding="12dp"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <!-- Campo: Telefono del colaborador -->
            <TextView
                android:id="@+id/tvTelefonoColab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="Teléfono"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etTelefonoColab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="987654321"
                android:textSize="14sp"
                android:padding="12dp"
                android:ems="10"
                android:inputType="phone" />

            <!-- Campo: Cargo -->
            <TextView
                android:id="@+id/tvCargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="Cargo / Ocupación"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinnerCargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_input"
                android:padding="12dp" />

            <!-- Campo: Selecciona Imagen -->
            <TextView
                android:id="@+id/tvSeleccionaImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Fotos"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="12dp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/bg_container"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

            <FrameLayout
                android:id="@+id/frameImagen1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_dashed_box"
                android:foregroundGravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="28sp" />
            </FrameLayout>
                <FrameLayout
                    android:id="@+id/frameImagen2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_dashed_box"
                    android:foregroundGravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28sp" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/frameImagen3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_dashed_box"
                    android:foregroundGravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28sp" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/frameImagen4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_dashed_box"
                    android:foregroundGravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28sp" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/frameImagen5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_dashed_box"
                    android:foregroundGravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28sp" />
                </FrameLayout>
        </LinearLayout>


            <EditText
                android:id="@+id/etColaborador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="N° de documento"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:textSize="14sp"
                android:padding="12dp"
                android:visibility="gone"/>

            <!-- Botón -->
            <Button
                android:id="@+id/btnRegistrarColaborador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:textAllCaps="false"
                android:backgroundTint="@color/azul_boton"
                android:textColor="@android:color/white"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="20dp"/>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>