<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:background="@android:color/white">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OLVÍDATE\nDE LAS FILAS"
            android:textColor="#0369A1"
            android:textStyle="bold"
            android:textSize="35sp"
            android:paddingHorizontal="30dp"
            android:layout_marginBottom="10dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registra tu ingreso diario en segundos con reconocimiento facial y código QR dinámico."
            android:textColor="#08243C"
            android:textSize="16sp"
            android:paddingHorizontal="30dp"
            android:layout_marginBottom="24dp" />

        <!-- Espacio flexible -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Imagen abajo -->
        <ImageView
            android:id="@+id/ivImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/informacion_img_01"
            android:contentDescription="Imagen de seguridad" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>