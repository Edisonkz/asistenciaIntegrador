<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Contenido principal centrado hacia la izquierda -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="160dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="8dp"
        android:textColor="@color/text_primary"
        android:textSize="32sp"
        android:textStyle="bold"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SEGURIDAD Y\nCONFIANZA" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="160dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="12dp"
        android:textColor="@color/text_secondary"
        android:textSize="17sp"
        android:shadowColor="#20000000"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="Tu identidad está protegida con la última tecnología en validación biométrica" />

    <!-- Círculo de fondo generado por código -->

    <!-- Avatar3 en el círculo derecho -->
    <View
        android:id="@+id/iv_background_oval"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginEnd="-160dp"
        android:layout_marginBottom="-160dp"
        android:alpha="0.8"
        android:background="@drawable/background_circle_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="Avatar informativo"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/informacion_avatar3" />

    <ImageView
        android:id="@+id/iv_estrella"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        android:contentDescription="Estrella decorativa"
        android:scaleType="centerInside"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_estrella2" />

    <ImageView
        android:id="@+id/iv_estrella2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="80dp"
        android:contentDescription="Estrella decorativa pequeña"
        android:scaleType="centerInside"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_estrella" />

    <!-- Círculos decorativos lado izquierdo -->
    <View
        android:id="@+id/circle1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/decorative_circle"
        android:alpha="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circle2"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/decorative_circle_green"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Indicadores de página centrados en la parte inferior -->
    <LinearLayout
        android:id="@+id/ll_page_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <!-- Los indicadores se añadirán dinámicamente -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>