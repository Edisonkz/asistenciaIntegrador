<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="0dp">

        <!-- Título destacado en azul degradado -->
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bg_qr_title_box"
            android:gravity="center"
            android:orientation="vertical"
            android:elevation="8dp">

            <TextView
                android:id="@+id/tvTituloQr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:letterSpacing="0.04"
                android:text="Puntual IA"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:shadowColor="#33000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"/>
        </LinearLayout>

        <!-- CardView con fondo blanco y sombra para el QR y datos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="14dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingTop="32dp"
                android:paddingEnd="0dp"
                android:paddingBottom="32dp">

                <!-- QR grande y centrado con borde y sombra -->
                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="18dp"
                    app:cardBackgroundColor="#F4F7FF"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/iv_qr"
                        android:layout_width="290dp"
                        android:layout_height="290dp"
                        android:layout_gravity="center"
                        android:contentDescription="QR generado"
                        android:padding="10dp"
                        android:scaleType="fitCenter" />
                </androidx.cardview.widget.CardView>

                <!-- Nombre -->
                <TextView
                    android:id="@+id/tvNombreQr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:letterSpacing="0.02"
                    android:paddingTop="8dp"
                    android:paddingBottom="2dp"
                    android:text="LUIS ANGEL FERNANDEZ PAREDES"
                    android:textColor="#1A237E"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Documento -->
                <TextView
                    android:id="@+id/tvDocQr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="N° Doc: 41465478"
                    android:textColor="#1976D2"
                    android:textSize="18sp" />

                <!-- Fecha y hora -->
                <TextView
                    android:id="@+id/tvFechaHoraQr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp"
                    android:text="Fecha: 10/09/2025   Hora: 09:01:45"
                    android:textColor="#374151"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Link de ayuda fuera del fondo principal -->
        <TextView
            android:id="@+id/tvAyudaQr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Necesitas ayuda?"
            android:textColor="#1976D2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="24dp"
            android:clickable="true"/>
    </LinearLayout>
</ScrollView>
