<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".pantalla_login_verificar_correo">

    <LinearLayout
        android:id="@+id/layout_contenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <!-- Imagen ilustrativa -->
    <ImageView
        android:id="@+id/img_verificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:contentDescription="Ilustración de verificación de correo"
        android:src="@drawable/imagen_verificacion"/>

    <!-- Título -->
    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verificación del correo"
        android:textColor="#0D1B2A"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Texto descriptivo -->
    <TextView
        android:id="@+id/tv_descripcion"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Por favor revise su correo empresarial en unos minutos le enviaremos un enlace para recuperar su contraseña."
        android:textAlignment="center"
        android:textColor="#4B5563"
        android:textSize="16sp"/>

    <!-- Botón principal -->
    <Button
        android:id="@+id/btn_finalizar_login"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#0077B6"
        android:text="Finalizar e Iniciar Sesión"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:cornerRadius="30dp"/>

    <!-- Texto de ayuda -->
    <TextView
        android:id="@+id/tv_ayuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="¿No recuerdas tu correo empresarial?\nRecibe ayuda en soporte@puntualia.com"
        android:textAlignment="center"
        android:textColor="#4B5563"
        android:textSize="14sp"
        android:autoLink="email"
        android:linksClickable="true"
        android:textColorLink="#0369A1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>