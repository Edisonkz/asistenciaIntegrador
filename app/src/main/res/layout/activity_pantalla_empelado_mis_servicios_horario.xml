<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FF"
    tools:context=".pantalla_empelado_mis_servicios_horario">

    <!--header-->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/barra_header"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="78dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver"
            android:src="@drawable/ic_left" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="Horarios Asignados"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Filtro: Semana/Mes -->
    <LinearLayout
        android:id="@+id/filtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtrar por:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="8dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_semana"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Semana"
                android:background="@drawable/btn_rounded_blue"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_mes"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Mes"
                android:textSize="16sp"
                android:textColor="#666666"
                app:backgroundTint="@null"
                android:background="@drawable/btn_rounded_gray" />
        </LinearLayout>

    </LinearLayout>

    <!--Body contenedor-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/filtro"
        app:layout_constraintBottom_toTopOf="@id/btn_cambio_turno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_lista_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="8dp"
            android:text="Lista de horarios"
            android:textColor="#666666"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- CardViews -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F4F7FF"
            app:layout_constraintWidth_percent="0.45">

            <!-- RelativeLayout para la imagen y el estado -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F7FF">

                <!-- Etiqueta 'Asignado' arriba izquierda -->
                <TextView
                    android:id="@+id/btn_estado_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded_blue"
                    android:text="Asignado"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="0dp"/>

                <!-- Imagen central -->
                <ImageView
                    android:id="@+id/img_illustration"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/btn_estado_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/img_fondo_cartas_de_cuerpo"
                    android:contentDescription="Ilustración" />

            </RelativeLayout>

            <!-- LinearLayout para el texto de fecha y horario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/barra_header"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:layout_marginTop="70dp"
                android:paddingBottom="8dp">

                <!-- Texto Fecha -->
                <TextView
                    android:id="@+id/texto_dia_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunes 25/08/2025"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp" />

                <!-- Texto Horario -->
                <TextView
                    android:id="@+id/texto_hora_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00AM - 06:00PM"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F4F7FF"
            app:layout_constraintWidth_percent="0.45">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F7FF">

                <TextView
                    android:id="@+id/btn_estado_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded_blue"
                    android:text="Asignado"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="0dp"/>

                <ImageView
                    android:id="@+id/img_illustration_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/btn_estado_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/img_fondo_cartas_de_cuerpo"
                    android:contentDescription="Ilustración" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/barra_header"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:layout_marginTop="70dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/texto_dia_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Martes 26/08/2025"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/texto_hora_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00AM - 06:00PM"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F4F7FF"
            app:layout_constraintWidth_percent="0.45">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F7FF">

                <TextView
                    android:id="@+id/btn_estado_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded_blue"
                    android:text="Asignado"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="0dp"/>

                <ImageView
                    android:id="@+id/img_illustration_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/btn_estado_3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/img_fondo_cartas_de_cuerpo"
                    android:contentDescription="Ilustración" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/barra_header"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:layout_marginTop="70dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/texto_dia_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miércoles 27/08/2025"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/texto_hora_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00AM - 06:00PM"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F4F7FF"
            app:layout_constraintWidth_percent="0.45">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F7FF">

                <TextView
                    android:id="@+id/btn_estado_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded_blue"
                    android:text="Asignado"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="0dp"/>

                <ImageView
                    android:id="@+id/img_illustration_4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/btn_estado_4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/img_fondo_cartas_de_cuerpo"
                    android:contentDescription="Ilustración" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/barra_header"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:layout_marginTop="70dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/texto_dia_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jueves 28/08/2025"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/texto_hora_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00AM - 06:00PM"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Flow que organiza los CardViews -->
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_cards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:constraint_referenced_ids="card_1,card_2,card_3,card_4"
            app:flow_horizontalGap="8dp"
            app:flow_maxElementsWrap="2"
            app:flow_verticalGap="8dp"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_lista_horario"
            android:orientation="horizontal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Botón solicitar cambio turno-->
    <Button
        android:id="@+id/btn_cambio_turno"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:backgroundTint="#006699"
        android:text="Solicitar cambio de turno"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
