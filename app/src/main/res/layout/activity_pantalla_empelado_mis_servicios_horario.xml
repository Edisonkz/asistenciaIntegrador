                        android:layout_height="wrap_content"
                        android:background="#F4F7FF">

                        <TextView
                            android:id="@+id/btn_estado_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/btn_rounded_blue"
                            android:paddingStart="12dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="6dp"
                            android:text="Libre"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/img_illustration_7"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/btn_estado_7"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:contentDescription="Ilustración"
                            android:src="@drawable/img_fondo_cartas_de_cuerpo" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/barra_header"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/texto_dia_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="Domingo 31/08/2025"
